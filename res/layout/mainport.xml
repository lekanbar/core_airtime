<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	android:id="@+id/widget32"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:orientation="vertical"
	android:layout_gravity="center_vertical"
	android:background="#00FF00"
	xmlns:android="http://schemas.android.com/apk/res/android">
    
	<ScrollView android:id="@+id/scrollView2" android:layout_width="fill_parent" android:layout_height="wrap_content" 
	    android:layout_alignParentTop="true" android:layout_above="@+id/layfoot">
<LinearLayout
	android:id="@+id/widgetgyg"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical"
	android:gravity="center_horizontal"
	>
	<com.core.airtime.SlideMenu
        android:id="@+id/slideMenu"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
	<LinearLayout
	android:id="@+id/widget39"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:layout_marginTop="0dp"
	android:background="#ffffff"
	android:padding="20dp"
	android:orientation="vertical">
<ImageView
	android:id="@+id/widget40"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:layout_gravity="center"
	android:contentDescription="@string/empty"
	android:src="@drawable/header"
	/>
</LinearLayout>
<LinearLayout
	android:id="@+id/widget42jkui"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:layout_marginTop="0dp"
	android:orientation="vertical" android:background="#00CC00">
<RelativeLayout
	android:id="@+id/lay_country"
	android:layout_width="300dp"
	android:layout_height="wrap_content"
	android:orientation="horizontal" android:layout_marginTop="5dp"
	android:layout_gravity="center" android:background="#00CC00">

<ImageView
	android:id="@+id/imgGlobe"
	android:layout_width="wrap_content"
	android:layout_height="fill_parent"
	android:layout_alignParentRight="true"
	android:contentDescription="@string/empty"
	android:clickable="true"
	android:src="@drawable/globe"
	/>

<TextView
    android:id="@+id/txtCountry"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    android:layout_alignParentLeft="true"
    android:layout_centerVertical="true"
    android:text="@string/empty"
    android:textColor="#000000"
    android:textSize="14sp" />

</RelativeLayout>
<LinearLayout
	android:id="@+id/widget391"
	android:layout_width="300dp"
	android:layout_height="wrap_content"
	android:orientation="vertical"
	android:layout_gravity="center"
	android:background="#00CC00">
<TextView
	android:id="@+id/txtCurrency"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:text="@string/vcurrency"
	android:layout_marginTop="5dp"
	android:layout_marginBottom="5dp"
	android:textSize="14sp"
	android:textColor="#ffffff" />
<TextView
	android:id="@+id/txtTitle"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:text="@string/maintopinst"
	android:layout_marginTop="5dp"
	android:layout_marginBottom="5dp"
	android:textSize="14sp"
	android:textColor="#ffffff" />
</LinearLayout>
</LinearLayout>
<LinearLayout
	android:id="@+id/widget42"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:layout_marginTop="20dp"
	android:orientation="vertical">
<Spinner
	android:id="@+id/spinNetworks"
	android:layout_width="300dp"
	android:layout_height="wrap_content"
	android:layout_gravity="center_horizontal" />
</LinearLayout>
<LinearLayout
	android:id="@+id/layout_minMaxAmount"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:layout_marginTop="10dp"
	android:orientation="vertical">
<EditText
	android:id="@+id/txtAmount"
	android:layout_width="300dp"
	android:layout_height="wrap_content"
	android:inputType="number"
	android:textSize="18sp"
	android:singleLine="true"
	android:maxLength="11" android:visibility="gone"/>
<Spinner
	android:id="@+id/spinAmount"
	android:layout_width="300dp"
	android:layout_height="wrap_content"
	android:layout_gravity="center_horizontal" android:visibility="gone" />
<TextView
	android:id="@+id/lblValueFormat"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:text="@string/valueformat"
	android:textSize="14sp"
	android:textColor="#0000FF"
	android:gravity="center"
	android:layout_gravity="left" android:visibility="gone"/>
</LinearLayout>
<LinearLayout
	android:id="@+id/widget46"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:layout_marginTop="10dp"
	android:orientation="vertical">
<EditText
	android:id="@+id/txtPhoneNumber"
	android:layout_width="300dp"
	android:layout_height="wrap_content"
	android:hint="@string/phonehint"
	android:maxLength="11"
	android:inputType="phone"
	android:textSize="18sp"
	android:singleLine="true"
	android:layout_gravity="center_horizontal" />
<TextView
	android:id="@+id/lblPhoneFormat"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:text="@string/phoneformat"
	android:textSize="14sp"
	android:textColor="#0000FF"
	android:gravity="center"
	android:layout_gravity="left"
	android:visibility="gone" />
</LinearLayout>
<LinearLayout
	android:id="@+id/widget58"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:layout_marginTop="10dp"
	android:orientation="vertical">
<TextView
	android:id="@+id/lblmsgfoot1"
	android:layout_width="300dp"
	android:layout_height="wrap_content"
	android:text="@string/mainfootmsg"
	android:textSize="14sp"
	android:textColor="#FF0000"
	android:layout_gravity="center"/>
<LinearLayout
	android:id="@+id/widget58ewewrer"
	android:layout_width="300dp"
	android:layout_height="wrap_content"
	android:layout_marginTop="10dp"
	android:layout_gravity="center"
	android:orientation="vertical">
<Button
	android:id="@+id/cmdSend"
	android:layout_width="100dp"
	android:layout_height="50dp"
	android:text="@string/vpay"
	android:background="#00CC00"
	android:textColor="#ffffff" 
	android:layout_gravity="right"
	android:layout_marginBottom="10dp"
	/>
</LinearLayout>
</LinearLayout>
</LinearLayout>
</ScrollView>

<RelativeLayout
	android:id="@+id/layfoot"
	android:layout_width="fill_parent"
	android:layout_height="50dp"
	android:orientation="horizontal"
	android:layout_alignParentBottom="true"
	android:background="#ffffff"
	>

<ImageView
    android:id="@+id/imgFoot"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:layout_alignParentRight="true"
    android:contentDescription="@string/empty"
    android:src="@drawable/footer" />

<ImageView
    android:id="@+id/imgMenu"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_centerVertical="true"
    android:layout_marginLeft="10dp"
    android:clickable="true"
    android:contentDescription="@string/empty"
    android:src="@drawable/menu_selector" />

</RelativeLayout>
</RelativeLayout>
