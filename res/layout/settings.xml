<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget32"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center_vertical"
    android:background="#00FF00"
    android:orientation="vertical" >
  
<ScrollView android:id="@+id/scrollView2" android:layout_width="fill_parent" android:layout_height="wrap_content"
    android:layout_alignParentTop="true" android:layout_above="@+id/layfoot">
<LinearLayout
	android:id="@+id/widgetgyg"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical"
	android:gravity="center_horizontal"
	>
	<com.core.airtime.SlideMenu
        android:id="@+id/slideMenu"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
<LinearLayout
	android:id="@+id/widget39"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical"
	android:background="#ffffff" 
	>
<ImageView
	android:id="@+id/imgLogo"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:contentDescription="@string/empty"
	android:layout_gravity="center"
	android:src="@drawable/header" />
</LinearLayout>
<LinearLayout
	android:id="@+id/widget391"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical"
	android:background="#00CC00">
<TextView
	android:id="@+id/txtTitle"
	android:layout_width="fill_parent"
	android:layout_margin="10dp"
	android:layout_height="wrap_content"
	android:text="@string/settingstop"
	android:layout_marginTop="5dp"
	android:layout_marginBottom="5dp"
	android:layout_gravity="center_horizontal"
	android:textSize="14sp"
	android:textColor="#ffffff" />
</LinearLayout>
<LinearLayout
	android:id="@+id/widget44"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:layout_marginTop="10dp"
	android:orientation="vertical">
<EditText
	android:id="@+id/txtEmail"
	android:layout_width="fill_parent"
	android:layout_margin="10dp"
	android:layout_height="wrap_content"
	android:textSize="18sp"
	android:singleLine="true"
	android:inputType="textEmailAddress"
	android:layout_marginTop="10dp"
	android:padding="10dp"
	android:hint="@string/emailhint"
	android:layout_gravity="center_horizontal" />
<Spinner
	android:id="@+id/spinLanguage"
	android:layout_width="300dp"
	android:visibility="gone"
	android:layout_height="wrap_content"
	android:layout_gravity="center_horizontal" />
</LinearLayout>
<LinearLayout
	android:id="@+id/widget42"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:layout_marginTop="10dp"
	android:orientation="vertical">
<Spinner
	android:id="@+id/spinCountry"
	android:layout_width="fill_parent"
	android:layout_margin="10dp"
	android:layout_height="wrap_content"
	android:layout_gravity="center_horizontal" />
</LinearLayout>
<LinearLayout
	android:id="@+id/widget4235"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:layout_marginTop="10dp"
	android:orientation="vertical">
<Spinner
	android:id="@+id/spinLocalUSD"
	android:layout_width="fill_parent"
	android:layout_margin="10dp"
	android:layout_height="wrap_content"
	android:layout_gravity="center_horizontal" />
</LinearLayout>
<LinearLayout
	android:id="@+id/widget42351"
	android:layout_width="fill_parent"
	android:layout_margin="10dp"
	android:layout_height="wrap_content"
	android:layout_marginTop="20dp"
	android:orientation="vertical"
	android:layout_gravity="center_horizontal"
	>
<TextView
	android:id="@+id/txtInstru"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:text="@string/aftinstruc"
	android:textSize="14sp"
	android:textColor="#FF0000" />
<TextView
	android:id="@+id/txtInstru2"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:text="@string/aftinstruc2"
	android:textSize="14sp"
	android:textColor="#FF0000" />
</LinearLayout>
<RelativeLayout
	android:id="@+id/widget58h"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:layout_margin="10dp"
	android:orientation="vertical">
    <Button android:id="@+id/cmdSend" 
            android:layout_width="100dp" 
            android:layout_height="50dp" 
            android:background="#00CC00" 
            android:text="@string/save"
            android:layout_alignParentRight="true"
            android:textColor="#ffffff"/>
</RelativeLayout>
</LinearLayout>
</ScrollView>
<RelativeLayout
	android:id="@+id/layfoot"
	android:layout_width="fill_parent"
	android:layout_height="50dp"
	android:orientation="horizontal"
	android:layout_alignParentBottom="true"
	android:background="#ffffff"
	>

<ImageView
    android:id="@+id/imgFoot"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:layout_alignParentRight="true"
    android:contentDescription="@string/empty"
    android:src="@drawable/footer" />

<ImageView
    android:id="@+id/imgMenu"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_centerVertical="true"
    android:layout_marginLeft="10dp"
    android:clickable="true"
    android:contentDescription="@string/empty"
    android:src="@drawable/menu_selector" />

</RelativeLayout>
</RelativeLayout>
